{
    "manifest_version": 2,
    "name":        "kukkoro",
    "description": "A chrome extension which index github's README",
    "version":     "0.0.1",
    "permissions": ["tabs", "activeTab"],
    "content_scripts": [
      {
        "run_at": "document_end",
        "matches": ["https://github.com/*"],
        "js": [
          "vendor/jquery-3.1.1.min.js",
          "js/content.js"
        ],
        "css": [
          "css/kukkoro.css"
        ]
      }
    ],
    "background": {
        "scripts": ["hot-reload.js"]
    }
}
